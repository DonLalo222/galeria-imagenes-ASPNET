
@{
    ViewBag.Title = "Create";
}

<div class="card mx-auto" style="width: 300px;">
    <div class="card-header">
        Crear Cuenta
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Store", "Account", FormMethod.Post))
        {
            <div class="form-group">
                <label>Nombre</label>
                @Html.TextBox("name", null, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label>Apellidos</label>
                @Html.TextBox("lastname", null, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label>Fecha de Nacimiento</label>
                @Html.TextBox("birthdate", null, new { @class = "form-control", type = "date", required = "required" })
            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.TextBox("email", null, new { @class = "form-control", type = "email", required = "required" })
            </div>
            <div class="form-group">
                <label>Password</label>
                @Html.TextBox("password", null, new { @class = "form-control", type = "password", required = "required" })
            </div>
            <div class="form-group">
                <label>Confirmar Password</label>
                @Html.TextBox("password2", null, new { @class = "form-control", type = "password", required = "required" })
            </div>
            if (ViewBag.Msg != null)
            {
                <label class="text-warning">@ViewBag.Msg</label>
            }
            <input type="submit" value="Registrarme!" class="btn btn-primary form-control" />
        }
    </div>
</div>

