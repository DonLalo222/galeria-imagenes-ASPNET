
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Msg != null)
{
    <div class="alert alert-success">
        @ViewBag.Msg
    </div>
}
<div class="mx-auto" style="width: 300px;">

    <div class="card text-center">
        <div class="card-header font-weight-bold">Login</div>
        <div class="card-body">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBox("email", null, new { @class = "form-control", type = "email", required = "required" })
                </div>
                <div class="form-group">
                    <label>Password</label>
                    @Html.TextBox("password", null, new { @class = "form-control", type = "password", required = "required" })
                </div>
                <div class="form-group">
                    <button class="btn btn-primary form-control" type="submit">Ingresar</button>
                </div>
            }
        </div>
        <div class="card-footer">
            @if (ViewBag.Msg != null)
            {
                <p class="text-danger">@ViewBag.Msg</p>
            }
        </div>
    </div>

</div>
    </div>