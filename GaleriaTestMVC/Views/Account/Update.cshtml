@model GaleriaTestMVC.Models.Users
@{
    ViewBag.Title = "Update";
}

<div class="card mx-auto" style="width: 300px;">
    <div class="card-header">
        Actualizar Mis datos
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Update", "Account", FormMethod.Post))
        {
            <div class="form-group">
                <label>Id</label>
                @Html.TextBox("id", Model.Id, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label>Nombre</label>
                @Html.TextBox("name", Model.Name, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label>Apellidos</label>
                @Html.TextBox("lastname", Model.LastName, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label>Fecha de Nacimiento</label>
                @Html.TextBox("birthdate", string.Format("{0:yyyy-MM-dd}", Model.Birthdate), new { @class = "form-control", type = "date", required = "required" })
            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.TextBox("email",Model.Email , new { @class = "form-control", type = "email", required = "required" })
            </div>
            if (ViewBag.Msg != null)
            {
                <label class="text-warning">@ViewBag.Msg</label>
            }
            <input type="submit" value="Guardar!" class="btn btn-primary form-control" />
        }
    </div>
</div>



